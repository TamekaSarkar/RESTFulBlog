<%- include("partials/header") %>

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(x){%>

                <div class="items">
                    <div class="image">
                        <img src="<%=x.image%>">
                    </div>
            
                   
                    <div class="content">
                        <a class="header" href="/blogs/<%= x._id %>"><%=x.title %></a>
                        <div class="meta">
                            <span><%=x.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%-x.body.substring(0,100) %></p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= x._id %>">
                            Read More
                            <i class="right chevron icon"></i>
                            </a>

                        </div>
                    </div>
                    
                  
                    
                  
                </div>
            
            
            <%}); %>
        </div>
    </div>
</div>


<%- include("partials/footer") %>